{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Elite User Reflection V1",
    "description": "Schema for structured user reflection records submitted via Elite Rituals.",
    "type": "object",
    "required": [
        "date",
        "session_type",
        "answers",
        "timestamp_utc"
    ],
    "properties": {
        "date": {
            "type": "string",
            "description": "YYYY-MM-DD format of the trading day."
        },
        "session_type": {
            "type": "string",
            "enum": [
                "REGULAR",
                "SUNDAY_RESET",
                "AD_HOC"
            ],
            "description": "Context of the reflection."
        },
        "answers": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "question",
                    "answer"
                ],
                "properties": {
                    "question": {
                        "type": "string"
                    },
                    "answer": {
                        "type": "string"
                    }
                }
            }
        },
        "system_context": {
            "type": "object",
            "properties": {
                "regime": {
                    "type": "string"
                },
                "volatility": {
                    "type": "string"
                },
                "reliability": {
                    "type": "number"
                }
            }
        },
        "user_sentiment": {
            "type": "string",
            "description": "Optional numeric or categorical sentiment (e.g. 'POSITIVE', 'FRUSTRATED')."
        },
        "timestamp_utc": {
            "type": "string",
            "format": "date-time"
        }
    }
}