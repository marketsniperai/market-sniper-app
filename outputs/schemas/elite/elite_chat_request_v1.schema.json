{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Elite Chat Request v1",
    "type": "object",
    "required": [
        "message"
    ],
    "properties": {
        "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
        },
        "context": {
            "type": "object",
            "properties": {
                "screen_id": {
                    "type": "string"
                },
                "selected_symbol": {
                    "type": "string"
                },
                "timeframe": {
                    "type": "string"
                }
            }
        }
    }
}